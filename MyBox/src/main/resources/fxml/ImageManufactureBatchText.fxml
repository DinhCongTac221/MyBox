<?import javafx.scene.shape.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImageManufactureBatchTextController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <TabPane fx:id="batchTabPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab fx:id="sourceTab" text="%SourceFiles">
                            <content>
                                <fx:include fx:id="table" source="FilesTable.fxml" HBox.hgrow="ALWAYS" />
                            </content>
                        </Tab>
                        <Tab fx:id="optionsTab" text="%Options">
                            <content>
                                <VBox fx:id="optionsVBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                                    <children>
                                        <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true" prefViewportHeight="444.0" prefViewportWidth="1634.0" VBox.vgrow="ALWAYS">
                                            <content>
                                                <VBox maxWidth="1.7976931348623157E308" spacing="10.0">
                                                    <children>
                                                        <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="NEVER">
                                                            <children>
                                                                <Label text="%Text" />
                                                                <TextField fx:id="waterInput" maxWidth="1.7976931348623157E308" promptText="%Text" text="MyBox" HBox.hgrow="ALWAYS" />
                                                            </children>
                                                        </HBox>
                                                        <FlowPane hgap="5.0" layoutX="20.0" layoutY="83.0" prefWrapLength="0.0" vgap="5.0">
                                                            <children>
                                                                <Label text="%FontFamily" />
                                                                <ChoiceBox fx:id="waterFamilyBox" prefWidth="150.0" />
                                                                <Label text="%FontSize" />
                                                                <ComboBox fx:id="waterSizeBox" editable="true" prefWidth="100.0" promptText="%Size" />
                                                                <Label text="%FontStyle" />
                                                                <ChoiceBox fx:id="waterStyleBox" prefWidth="150.0" />
                                                                <Label text="%FontColor" />
                                                                <fx:include fx:id="colorSet" source="ColorSet.fxml" />
                                                            </children>
                                                        </FlowPane>
                                                        <FlowPane hgap="5.0" layoutX="20.0" layoutY="276.0" prefWrapLength="0.0" vgap="5.0">
                                                            <children>
                                                                <Label text="%Shadow" />
                                                                <ComboBox fx:id="waterShadowBox" editable="true" prefWidth="90.0" />
                                                                <Label text="%Angle" />
                                                                <ComboBox fx:id="waterAngleBox" editable="true" prefWidth="90.0" />
                                                                <Label text="%Opacity" />
                                                                <ComboBox fx:id="opacityBox" editable="true" prefWidth="90.0" />
                                                                <CheckBox fx:id="outlineCheck" mnemonicParsing="false" text="%Outline" />
                                                                <CheckBox fx:id="verticalCheck" mnemonicParsing="false" text="%Vertical" />
                                                            </children>
                                                        </FlowPane>
                                          <VBox fx:id="blendBox" spacing="5.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
                                             <children>
                                                              <FlowPane hgap="5.0" prefWrapLength="0.0" vgap="5.0">
                                                                  <children>
                                                                      <Label text="%Position" />
                                                                      <RadioButton mnemonicParsing="false" selected="true" text="%RightBottom">
                                                                          <toggleGroup>
                                                                              <ToggleGroup fx:id="positionGroup" />
                                                                          </toggleGroup>
                                                                      </RadioButton>
                                                                      <RadioButton mnemonicParsing="false" text="%RightTop" toggleGroup="$positionGroup" />
                                                                      <RadioButton mnemonicParsing="false" text="%LeftBottom" toggleGroup="$positionGroup" />
                                                                      <RadioButton mnemonicParsing="false" text="%LeftTop" toggleGroup="$positionGroup" />
                                                                      <Label text="%Margins" />
                                                                      <TextField fx:id="marginInput" prefWidth="80.0" text="20" />
                                                                  </children>
                                                              </FlowPane>
                                                              <FlowPane hgap="5.0" prefWrapLength="0.0" vgap="5.0">
                                                                  <children>
                                                                      <Label text="%Position" visible="false" />
                                                                      <RadioButton mnemonicParsing="false" text="%Center" toggleGroup="$positionGroup" />
                                                                      <RadioButton mnemonicParsing="false" text="%Custom" toggleGroup="$positionGroup" />
                                                                      <TextField fx:id="waterXInput" prefWidth="90.0" promptText="X" />
                                                                      <TextField fx:id="waterYInput" prefWidth="90.0" promptText="Y" />
                                                                  </children>
                                                              </FlowPane>
                                             </children>
                                          </VBox>
                                          <FlowPane fx:id="modePane" hgap="5.0" prefWidth="200.0" prefWrapLength="0.0" vgap="5.0">
                                             <children>
                                                <Label fx:id="blendLabel" text="%BlendMode" />
                                                <ComboBox fx:id="blendSelector" prefWidth="140.0" />
                                                <Label text="%Opacity">
                                                   <FlowPane.margin>
                                                      <Insets />
                                                   </FlowPane.margin>
                                                </Label>
                                                <ComboBox fx:id="opacitySelector" editable="true" prefWidth="100.0" />
                                                <CheckBox fx:id="blendTopCheck" mnemonicParsing="false" selected="true" text="%OnTop" />
                                             </children>
                                          </FlowPane>
                                                    </children>
                                                    <padding>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                    </padding>
                                                </VBox>
                                            </content>
                                        </ScrollPane>
                                        <Button fx:id="previewButton" disable="true" mnemonicParsing="false" onAction="#previewAction" styleClass="halfBig" stylesheets="@../styles/MyBox.css">
                                            <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconPreview.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab fx:id="targetTab" text="%TargetFiles">
                            <content>
                                <VBox fx:id="targetVBox" spacing="10.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0">
                                            <children>
                                                <Label text="%FilesPath" />
                                                <TextField fx:id="targetPathInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                                <Button fx:id="selectPathTargetButton" mnemonicParsing="false" onAction="#selectTargetPath" onMouseEntered="#popTargetPath">
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconFolderImage.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                                <Button fx:id="browseButton" mnemonicParsing="false" onAction="#browseAction">
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconBrowse.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label text="%FileType" />
                                                <RadioButton mnemonicParsing="false" selected="true" text="%OriginalType">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="fileTypeGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton mnemonicParsing="false" text="png" toggleGroup="$fileTypeGroup" />
                                                <RadioButton mnemonicParsing="false" text="jpg" toggleGroup="$fileTypeGroup" />
                                                <RadioButton mnemonicParsing="false" text="bmp" toggleGroup="$fileTypeGroup" />
                                                <RadioButton mnemonicParsing="false" text="tif" toggleGroup="$fileTypeGroup" />
                                                <RadioButton mnemonicParsing="false" text="gif" toggleGroup="$fileTypeGroup" />
                                                <RadioButton fx:id="pcxRadio" mnemonicParsing="false" text="pcx" toggleGroup="$fileTypeGroup" />
                                                <RadioButton mnemonicParsing="false" text="pnm" toggleGroup="$fileTypeGroup" />
                                                <RadioButton mnemonicParsing="false" text="wbmp" toggleGroup="$fileTypeGroup" />
                                                <RadioButton mnemonicParsing="false" text="ico" toggleGroup="$fileTypeGroup" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="%ExistedFiles" />
                                                <RadioButton fx:id="targetReplaceRadio" mnemonicParsing="false" text="%Replace">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="targetExistGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton fx:id="targetRenameRadio" mnemonicParsing="false" selected="true" text="%TargetNameAppend" toggleGroup="$targetExistGroup" />

                                                <TextField fx:id="targetAppendInput" prefWidth="70.0" text="-m" />
                                                <RadioButton fx:id="targetSkipRadio" mnemonicParsing="false" text="%Skip" toggleGroup="$targetExistGroup" />
                                            </children>
                                        </HBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab fx:id="logsTab" text="%Logs">
                            <content>
                                <VBox fx:id="logsBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                                    <children>
                                        <TextArea fx:id="logsTextArea" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" wrapText="true" VBox.vgrow="ALWAYS" />
                                        <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label text="%MaxLines" />
                                                <TextField fx:id="maxLinesinput" prefWidth="80.0" text="5000" />
                                                <CheckBox fx:id="verboseCheck" mnemonicParsing="false" text="%VerboseLogs" />
                                                <Button fx:id="clearButton1" mnemonicParsing="false" onAction="#clearLogs">
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/iconClear.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <fx:include fx:id="operationBar" source="Operation.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
