<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" prefHeight="500.0" prefWidth="800.0" spacing="5.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.DataClipboardPopController">
    <padding>
        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
    </padding>
    <children>
        <fx:include fx:id="clipboard" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" source="ControlDataClipboard.fxml" VBox.vgrow="ALWAYS" />
      <FlowPane fx:id="pastePane" alignment="CENTER_RIGHT" hgap="2.0" prefWrapLength="800.0" vgap="2.0">
         <children>
            <Label minHeight="-Infinity" minWidth="-Infinity" text="%PasteLocation" wrapText="true">
               <FlowPane.margin>
                  <Insets right="20.0" />
               </FlowPane.margin>
            </Label>
            <Label text="%TableRow" />
            <ComboBox fx:id="rowSelector" prefWidth="100.0" />
            <Label minWidth="-Infinity" text="%Column" />
            <ComboBox fx:id="colSelector" prefWidth="200.0" />
         </children>
      </FlowPane>
      <FlowPane fx:id="pastePane1" alignment="CENTER_RIGHT" hgap="2.0" layoutX="12.0" layoutY="480.0" prefWrapLength="800.0" vgap="2.0">
         <children>
            <ImageView fx:id="tipsView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../buttons/Red/iconTips.png" />
               </image>
            </ImageView>
                <Button fx:id="closePop2Button" mnemonicParsing="false" onAction="#closeAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconCancel.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            <Button fx:id="okButton" mnemonicParsing="false" onAction="#okAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconOK.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </FlowPane>
    </children>
</VBox>
