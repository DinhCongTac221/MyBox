<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="750.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ConvolutionKernelManagerController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <items>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <children>
                        <ToolBar maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
                            <items>
                                <Button fx:id="createButton" mnemonicParsing="false" onAction="#createAction">
                                    <graphic>
                                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/Red/iconFileAdd.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="editButton" mnemonicParsing="false" onAction="#editAction">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/Red/iconEdit.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyAction">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/Red/iconCopy.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteAction">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/Red/iconFileDelete.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearAction">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/Red/iconClear.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="examplesButton" mnemonicParsing="false" onAction="#examplesAction">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../buttons/Red/iconExamples.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </items>
                        </ToolBar>
                        <TableView fx:id="tableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="nameColumn" prefWidth="170.0" text="%Dataid" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" prefViewportHeight="629.0" prefViewportWidth="803.0">
                    <content>
                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                                    <children>
                                        <Label maxWidth="1.7976931348623157E308" styleClass="blue-label" stylesheets="@../styles/MyBox.css" HBox.hgrow="ALWAYS">
                                            <padding>
                                                <Insets left="20.0" />
                                            </padding>
                                        </Label>
                                        <HBox fx:id="actionBox" alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Button fx:id="testButton" mnemonicParsing="false" onAction="#testAction">
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/Red/iconGo.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                                <Button mnemonicParsing="false" onAction="#zeroAction" text="0" />
                                                <Button mnemonicParsing="false" onAction="#oneAction" text="1" />
                                                <Button fx:id="gaussButton" mnemonicParsing="false" onAction="#gaussianDistribution" text="%GaussianDistribution" />
                                                <Button mnemonicParsing="false" onAction="#normalization" text="%Normalization" />
                                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveAction"
                                                         styleClass="big" stylesheets="@../styles/MyBox.css" HBox.hgrow="NEVER">
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/Red/iconSave.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="%Name" />
                                        <TextField fx:id="nameInput" prefWidth="257.0" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="%Type" />
                                        <RadioButton mnemonicParsing="false" text="%Blur">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="typeGroup" />
                                            </toggleGroup>
                                        </RadioButton>
                                        <RadioButton mnemonicParsing="false" text="%Sharpen" toggleGroup="$typeGroup" />
                                        <RadioButton mnemonicParsing="false" text="%EdgeDetection" toggleGroup="$typeGroup" />
                                        <RadioButton mnemonicParsing="false" text="%Emboss" toggleGroup="$typeGroup" />
                                        <RadioButton mnemonicParsing="false" text="%None" toggleGroup="$typeGroup" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="%Width" />
                                        <ComboBox fx:id="widthBox" editable="true" prefWidth="100.0" />
                                        <Label text="%Height" />
                                        <ComboBox fx:id="heightBox" editable="true" prefWidth="100.0" />
                                        <Label text="%OddNumber" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="%Edges" />
                                        <RadioButton fx:id="keepRadio" mnemonicParsing="false" selected="true" text="%KeepValues">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="edgesGroup" />
                                            </toggleGroup>
                                        </RadioButton>
                                        <RadioButton fx:id="zeroRadio" mnemonicParsing="false" text="%FillZero2" toggleGroup="$edgesGroup" />
                                        <CheckBox fx:id="grayCheck" mnemonicParsing="false" text="%Gray">
                                            <HBox.margin>
                                                <Insets left="60.0" />
                                            </HBox.margin>
                                        </CheckBox>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="%Description" />
                                        <TextField fx:id="desInput" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </items>
        </SplitPane>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <bottom>
        <Label fx:id="bottomLabel" maxWidth="1.7976931348623157E308" styleClass="blue-label" stylesheets="@../styles/MyBox.css" text="%DoubleClickToEdit" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </Label>
    </bottom>
</BorderPane>
