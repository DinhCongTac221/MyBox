<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" spacing="5.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlData2DGroup">
    <children>
                      <FlowPane alignment="CENTER_LEFT" hgap="2.0" vgap="2.0">
                          <children>
                              <Label text="%GroupBy" />
                              <RadioButton fx:id="valuesRadio" mnemonicParsing="false" selected="true" text="%Values">
               <toggleGroup>
                  <ToggleGroup fx:id="typeGroup" />
               </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="intervalRadio" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="%Interval" toggleGroup="$typeGroup" />
                              <RadioButton fx:id="numberRadio" layoutX="106.0" layoutY="10.0" mnemonicParsing="false" text="%Number2" toggleGroup="$typeGroup" />
                              <RadioButton fx:id="conditionsRadio" layoutX="194.0" layoutY="10.0" mnemonicParsing="false" text="%Conditions" toggleGroup="$typeGroup" />
                          </children>
                      </FlowPane>
                      <VBox fx:id="groupBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="ALWAYS">
                          <children>
                              <VBox fx:id="columnsBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                                  <children>
                                      <fx:include fx:id="columns" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" source="ControlSelection.fxml" VBox.vgrow="ALWAYS" />
                                  </children>
                              </VBox>
                              <HBox fx:id="columnlBox" alignment="CENTER_LEFT" layoutX="10.0" layoutY="294.0" spacing="2.0">
                                  <children>
                                      <Label text="%Column" />
                                      <ComboBox fx:id="columnSelector" prefWidth="200.0" />
                                  </children>
                              </HBox>
                              <HBox fx:id="intervalBox" alignment="CENTER_LEFT" spacing="2.0">
                                  <children>
                                      <Label text="%GroupInterval" />
                                      <TextField fx:id="intervalInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                  </children>
                              </HBox>
                              <HBox fx:id="numberBox" alignment="CENTER_LEFT" spacing="2.0">
                                  <children>
                                      <Label text="%GroupNumber" />
                                      <TextField fx:id="numberInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                  </children>
                              </HBox>
                              <VBox fx:id="conditionsBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" VBox.vgrow="ALWAYS">
                                  <children>
                                      <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#deleteAction">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconDelete.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="editButton" disable="true" layoutX="51.0" layoutY="10.0" mnemonicParsing="false" onAction="#editAction">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconEdit.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addAction">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconAdd.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                                      </HBox>
                                      <TableView fx:id="tableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                          <columns>
                                              <TableColumn fx:id="conditionColumn" editable="false" maxWidth="1.7976931348623157E308" prefWidth="300.0" text="%Expression" />
                        <TableColumn fx:id="reverseColumn" editable="false" maxWidth="1.7976931348623157E308" text="%Reverse" />
                        <TableColumn fx:id="maxColumn" editable="false" maxWidth="1.7976931348623157E308" text="%MaxLines" />
                                          </columns>
                                      </TableView>
                                  </children>
                              </VBox>
                          </children>
                      </VBox>
    </children>
</VBox>
