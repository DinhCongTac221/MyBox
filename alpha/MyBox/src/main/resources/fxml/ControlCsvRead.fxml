<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlCsvOptions">
    <children>
        <VBox layoutX="32.0" layoutY="271.0" spacing="5.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
            <children>
                <Label text="%Charset" />
                <RadioButton fx:id="charsetAutoRadio" minHeight="-Infinity" mnemonicParsing="false" selected="true" text="%DetermineAutomatically" wrapText="true">
                    <toggleGroup>
                        <ToggleGroup fx:id="charsetGroup" />
                    </toggleGroup>
                </RadioButton>
                <FlowPane hgap="5.0" vgap="5.0">
                    <children>
                        <RadioButton fx:id="charsetKnownRadio" minHeight="-Infinity" mnemonicParsing="false" text="%Known" toggleGroup="$charsetGroup" wrapText="true" />
                        <ComboBox fx:id="charsetSelector" prefWidth="150.0" />
                    </children>
                </FlowPane>
            </children>
        </VBox>
        <CheckBox fx:id="withNamesCheck" minHeight="-Infinity" mnemonicParsing="false" selected="true" text="%FirstLineDefineNames" wrapText="true" />
        <VBox spacing="5.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css" VBox.vgrow="NEVER">
            <children>
                <Label text="%CsvDelimiter" />
                <FlowPane hgap="5.0" vgap="5.0">
                    <children>
                        <RadioButton fx:id="commaRadio" mnemonicParsing="false" selected="true" text=",">
                            <toggleGroup>
                                <ToggleGroup fx:id="delimiterGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="lineRadio" mnemonicParsing="false" text="|" toggleGroup="$delimiterGroup" />
                        <RadioButton fx:id="atRadio" mnemonicParsing="false" text="\@" toggleGroup="$delimiterGroup" />
                        <RadioButton fx:id="sharpRadio" mnemonicParsing="false" text="#" toggleGroup="$delimiterGroup" />
                        <RadioButton fx:id="semicolonsRadio" mnemonicParsing="false" text=";" toggleGroup="$delimiterGroup" />
                        <RadioButton fx:id="delimiterInputRadio" mnemonicParsing="false" text="%Character" toggleGroup="$delimiterGroup" />
                        <TextField fx:id="delimiterInput" prefWidth="40.0" />
                    </children>
                </FlowPane>
            </children>
        </VBox>
    </children>
</VBox>
