<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlData2DInput">
    <children>
        <SplitPane fx:id="splitPane" dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <items>
            <ScrollPane fx:id="leftPane" fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true">
               <content>
                      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0">
                          <children>
                        <FlowPane hgap="2.0" vgap="2.0">
                           <children>
                              <Button fx:id="loadContentInSystemClipboard2Button" mnemonicParsing="false" onAction="#loadContentInSystemClipboard">
                                 <graphic>
                                    <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../buttons/iconImageSystem.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                              <Button fx:id="delimiterButton" mnemonicParsing="false" onAction="#delimiterActon">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../buttons/Red/iconDelimiter.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                                      <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshAction">
                                          <graphic>
                                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                  <image>
                                                      <Image url="@../buttons/Red/iconRefresh.png" />
                                                  </image>
                                              </ImageView>
                                          </graphic>
                                      </Button>
                              <RadioButton fx:id="csvRadio" mnemonicParsing="false" selected="true" text="CSV">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="formatGroup" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="textsRadio" mnemonicParsing="false" text="%Texts" toggleGroup="$formatGroup" />
                                      <CheckBox fx:id="nameCheck" mnemonicParsing="false" text="%FirstLineAsNames" />
                           </children>
                        </FlowPane>
                        <Label fx:id="delimiterLabel" layoutX="12.0" layoutY="42.0" minHeight="-Infinity" wrapText="true" />
                              <TextArea fx:id="textArea" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="%InputOrPasteText" VBox.vgrow="ALWAYS" />
                        <Label fx:id="commentsLabel" minHeight="-Infinity" text="%CSVComments" wrapText="true" />
                          </children>
                          <padding>
                              <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                          </padding>
                      </VBox>
               </content>
            </ScrollPane>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="2.0" VBox.vgrow="NEVER">
                     <children>
                        <Label fx:id="nameLabel" maxWidth="1.7976931348623157E308" minHeight="-Infinity" wrapText="true" HBox.hgrow="ALWAYS" />
                        <CheckBox fx:id="leftPaneCheck" minWidth="-Infinity" mnemonicParsing="false">
                           <graphic>
                              <ImageView fx:id="leftPaneControl1" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconDoubleLeft.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </CheckBox>
                        <Button fx:id="editButton" mnemonicParsing="false" onAction="#editAction">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconEdit.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  <fx:include fx:id="source" source="ControlData2DSource.fxml" />
               </children>
            </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>
